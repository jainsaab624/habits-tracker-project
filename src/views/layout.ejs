<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Habits - Track Your Habits</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <script src="https://kit.fontawesome.com/ec8788047a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-custom">
      <div class="container-fluid">
        <a class="navbar-brand txt-clr-white" href="/">HabitTracker</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link  txt-clr-white" aria-current="page" href="/">Home</a>
            </li>
            <% if(locals.userName){ %>
              <li class="nav-item">
                <a class="nav-link  txt-clr-white" aria-current="page" href="#"><%= userName %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link  txt-clr-white" aria-current="page" href="/users/logout">Logout</a>
              </li>
              <%}else{ %>
            <li class="nav-item">
              <a class="nav-link txt-clr-white" href="/users/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link txt-clr-white" href="/users/login">Login</a>
            </li>
            <%} %>
           
          </ul>
        </div>
      </div>
    </nav>

    <!-- main content -->
    <div><%- body %></div>
    <!-- <footer class="mt">&copy; 2024 Habits of Humans. All rights reserved.</footer> -->

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
    <script src="/js/main.js"></script>
  </body>
</html>
